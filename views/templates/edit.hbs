<link rel="stylesheet" type="text/css" href="/css/{{style}}">
<link
    href="https://fonts.googleapis.com/css?family=Abel|Alegreya+Sans+SC|Anton|Arima+Madurai|Bevan|Bree+Serif|Courgette|Dosis|Julius+Sans+One|Magra|Poppins|Puritan|Raleway|Sniglet|Special+Elite"
    rel="stylesheet">

<link rel="stylesheet" href="/css/edit.css">
<h1 id="edit">Edit Post</h1>
<form id="updatePost" action="/businesses/{{id}}/edit?_method=PUT" method="POST"
    enctype="application/x-www-form-urlencoded">

    <div>
        <label for="name">Business Name: </label>
        <input type="text" id="name" name="name" value="{{name}}"></input>
    </div>
    <div>
        <label for="author">Updated By: </label>
        <input type="text" id="author" name="author" value="{{author}}"></input>
    </div>
    <div>
        <label for="url">Photo: </label>
        <input type="text" id="url" name="url" value="{{url}}"></input>
    </div>
    <div>
        <label for="description">Description: </label>
        <input type="text" id="description" name="description" value="{{description}}"></input>
    </div>
<button type="submit" form='updatePost' value="Submit">Update Post</button>
</form><br>
<a href="/businesses"><button id='back' type="submit">Back</button></a>