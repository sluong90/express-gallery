<link rel="stylesheet" href="/css/{{style}}">

<form id="updatePost" action="/businesses/{{id}}/edit?_method=PUT" method="POST"
    enctype="application/x-www-form-urlencoded">

    <div>
        <label for="name">Business Name: </label>
        <input type="text" id="name" name="name" value="{{name}}"></input>
    </div>
    <div>
        <label for="author">Updated By: </label>
        <input type="text" id="author" name="author" value="{{author}}"></input>
    </div>
    <div>
        <label for="url">Photo: </label>
        <input type="text" id="url" name="url" value="{{url}}"></input>
    </div>
    <div>
        <label for="description">Description: </label>
        <input type="text" id="description" name="description" value="{{description}}"></input>
    </div>

    <input type="submit" value="UPDATE POST"></input>
</form>